@model CreateOrderAddressDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}

<div class="container-fluid">
    <div class="row">

            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Teslimat ve Fatura Adresi</span></h5>
                <div class="bg-light p-30 mb-5">
                    <form method="post">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Ad</label>
                            <input class="form-control" type="text" asp-for="Name" placeholder="John">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyad</label>
                            <input class="form-control" type="text" asp-for="Surname" placeholder="Doe">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-posta</label>
                            <input class="form-control" type="text" asp-for="Email" placeholder="mail@email.com">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon Numarası</label>
                            <input class="form-control" type="text" asp-for="Phone" placeholder="+90 123 456 7890">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satırı 1</label>
                            <input class="form-control" type="text" asp-for="Detail1" placeholder="123 Mahallesi">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Adres Satırı 2</label>
                            <input class="form-control" type="text" asp-for="Detail2" placeholder="123 Sokak">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ülke</label>
                            <input class="form-control" type="text" asp-for="Country" placeholder="Ülkeniz">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Şehir</label>
                            <input class="form-control" type="text" asp-for="City" placeholder="Şehriniz">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" asp-for="District" placeholder="İlçeniz">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Posta Kodu</label>
                            <input class="form-control" type="text" asp-for="ZipCode" placeholder="12345">
                        </div>
                    </div>
                    </form>
                </div>
            </div>

        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Özeti</span></h5>

            @await Component.InvokeAsync("_OrderSummaryComponentPartial")

            @await Component.InvokeAsync("_OrderPaymentMethodComponentPartial")
        </div>
    </div>
</div>

